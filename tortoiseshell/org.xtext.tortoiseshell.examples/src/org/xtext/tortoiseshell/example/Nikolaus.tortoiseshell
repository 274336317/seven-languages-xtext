// 'Das Haus vom Nikolaus'
begin
  val length = 150
  val diagonal = length * sqrt(2)
  lineWidth = 2 
  square(length)
  turnRight(45)
  lineColor = blue 
  forward(diagonal)
  turnLeft(90)
  lineColor = red
  forward(diagonal / 2)
  turnLeft(90)
  forward(diagonal / 2)
  turnLeft(90)
  lineColor = blue
  forward(diagonal)
end

sub square
  int length
begin
  for (i : 1..4) {
    forward(length)
    turnRight(90) 
  }
end