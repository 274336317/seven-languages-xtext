import com.google.^inject.name.Named 
import com.acme.GuessTheNumber

inject GuessTheNumber controller

/**
 * the guess might be a parameter
 */
GET /guess
	do controller.handleGuess(controller.guess)

/**
 * the same but having the guess as part of URL
 */
GET /guess/:guess*
	do try {
		controller.handleGuess(Integer::parseInt(guess))
	} catch (NumberFormatException e) {
		controller.handleGuess(null)
	}
